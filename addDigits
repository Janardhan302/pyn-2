class Solution(object):
    def addDigits(self, num):
        if num==0:
            return 0
        else:
            while num>=10:
                digit_sum=0
                for digit in str(num):
                    digit_sum+=int(digit)
                num=digit_sum
            return num    
sol=Solution()
num=int(input("Enter the number:"))
print(sol.addDigits)
